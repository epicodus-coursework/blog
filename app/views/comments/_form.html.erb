<%= render('layouts/errors', :object => @comment) %>

<%= form_for [@post, @comment], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit :class => 'btn btn-success' %>
  </div>
<% end %>
