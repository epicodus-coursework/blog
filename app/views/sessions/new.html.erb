  <h1>Log In</h1>

  <%= flash[:alert] %>

  <%= form_tag sessions_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="form-group">
      <%= submit_tag "Log in" %>
    </div>
  <% end %>
